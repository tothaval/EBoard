<UserControl x:Class="EBoardElementPluginLinker.LinkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EBoardElementPluginLinker"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:LinkViewModel}"
             >

    <Border Background="{Binding BrushManagement.Background, NotifyOnSourceUpdated=True}"
            BorderBrush="{Binding BrushManagement.Border, NotifyOnSourceUpdated=True}"
            BorderThickness="{Binding BorderManagement.BorderThickness, NotifyOnSourceUpdated=True}"
            CornerRadius="{Binding BorderManagement.CornerRadius, NotifyOnSourceUpdated=True}"

                     Padding="{Binding BorderManagement.Padding}"
            MinHeight="60"
            MinWidth="60"
            Width="{Binding BorderManagement.Width, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}"
            Height="{Binding BorderManagement.Height, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}">

        <Grid MinHeight="150" MinWidth="150"
          Background="MediumOrchid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Content="{Binding EpicText}" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>
