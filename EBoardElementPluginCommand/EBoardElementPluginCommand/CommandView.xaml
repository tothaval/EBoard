<UserControl x:Class="EBoardElementPluginCommand.CommandView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EBoardElementPluginCommand"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:CommandViewModel}"             >

    <Border Background="{Binding BrushManagement.Background, NotifyOnSourceUpdated=True}"
            BorderBrush="{Binding BrushManagement.Border, NotifyOnSourceUpdated=True}"
            BorderThickness="{Binding BorderManagement.BorderThickness, NotifyOnSourceUpdated=True}"
            CornerRadius="{Binding BorderManagement.CornerRadius, NotifyOnSourceUpdated=True}"

                     Padding="{Binding BorderManagement.Padding}"
            MinHeight="60"
            MinWidth="60"
            Width="{Binding BorderManagement.Width, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}"
            Height="{Binding BorderManagement.Height, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}">

        <Grid MinHeight="150" MinWidth="150"
          Background="MediumSlateBlue"
              Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Label Content="{Binding EpicText, NotifyOnSourceUpdated=True}" MinWidth="150" Grid.Row="0" Grid.Column="0"/>

            <TextBox Text="{Binding StdOut, NotifyOnSourceUpdated=True}" MinWidth="150" IsReadOnly="True" IsReadOnlyCaretVisible="True"
                     Grid.Row="1" Grid.Column="0" TextWrapping="Wrap"/>

            <TextBox Text="{Binding StdIn, UpdateSourceTrigger=PropertyChanged}"  MinWidth="150" AcceptsReturn="False" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top">
                <TextBox.InputBindings>
                    <KeyBinding 
            Key="Enter" 
            Command="{Binding EnterKeyPressedCommand}" 
            CommandParameter="{Binding Path=Text, RelativeSource={RelativeSource AncestorType={x:Type TextBox}}}" />
                </TextBox.InputBindings>

            </TextBox>

        </Grid>
    
    </Border>
    
</UserControl>
