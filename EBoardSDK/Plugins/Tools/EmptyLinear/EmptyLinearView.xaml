<UserControl x:Class="EBoardSDK.Plugins.Tools.EmptyLinear.EmptyLinearView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EBoardSDK.Plugins.Tools.EmptyLinear"
             d:DataContext="{d:DesignInstance Type=local:EmptyLinearViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="{Binding BrushManagement.Background, NotifyOnSourceUpdated=True}"
            BorderBrush="{Binding BrushManagement.Border, NotifyOnSourceUpdated=True}"
            BorderThickness="{Binding BorderManagement.BorderThickness, NotifyOnSourceUpdated=True}"
            CornerRadius="{Binding BorderManagement.CornerRadius, NotifyOnSourceUpdated=True}"

            Padding="{Binding BorderManagement.Padding}"
            MinHeight="60"
            MinWidth="60"
            Width="{Binding BorderManagement.Width, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}"
            Height="{Binding BorderManagement.Height, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}">

        <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
                     Margin="{Binding BorderManagement.Margin}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                           Foreground="{Binding BrushManagement.Foreground, NotifyOnSourceUpdated=True}"
                           FontWeight="Bold"
                           Text="{Binding PluginHeader}"
                           TextWrapping="Wrap"
                       HorizontalAlignment="Center"/>

            <Label Grid.Row="1"
                   Content="{Binding Content}"
               Background="{Binding Background}"/>
        </Grid>

    </Border>
</UserControl>
