<UserControl x:Class="EBoardSDK.Plugins.Tools.Uptime.UptimeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EBoardSDK.Plugins.Tools.Uptime"
             d:DataContext="{d:DesignInstance Type=local:UptimeViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="{Binding BrushManagement.Background, NotifyOnSourceUpdated=True}"
            BorderBrush="{Binding BrushManagement.Border, NotifyOnSourceUpdated=True}"
            BorderThickness="{Binding BorderManagement.BorderThickness, NotifyOnSourceUpdated=True}"
            CornerRadius="{Binding BorderManagement.CornerRadius}"           

            Padding="{Binding BorderManagement.Padding}"
            MinHeight="60"
            MinWidth="60"
            Width="{Binding BorderManagement.Width, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}"
            Height="{Binding BorderManagement.Height, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}">


        <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
                     Margin="{Binding BorderManagement.Margin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                           Foreground="{Binding BrushManagement.Foreground, NotifyOnSourceUpdated=True}"
                           FontWeight="Bold"
                           Text="{Binding PluginHeader}"
                           TextWrapping="Wrap"
                       HorizontalAlignment="Center"/>
            
            <TextBlock Grid.Row="1"
                       
                       Grid.Column="0"        
                       Background="Transparent"
                       Padding="0 10 0 0"
                     Foreground="{Binding BrushManagement.Foreground}"
                         Text="now"/>
            
            <TextBlock Grid.Row="1"
                       Grid.Column="1"
                         Text="{Binding Clock, UpdateSourceTrigger=PropertyChanged}"
                         Background="Transparent"
                       TextAlignment="Right"
                     Foreground="{Binding BrushManagement.Foreground}"
                       Padding="0 10 0 0"
                         MinWidth="100"/>


            <TextBlock Grid.Row="2"
                       
                       Grid.Column="0"        
                       Background="Transparent"
                       Padding="0 10 0 0"
                     Foreground="{Binding BrushManagement.Foreground}"
                         Text="uptime"/>

            <TextBlock Grid.Row="2"                      
                       Grid.Column="1"
                       Text="{Binding Uptime, UpdateSourceTrigger=PropertyChanged}"
                       Background="Transparent"     
                       TextAlignment="Right"         
                       VerticalAlignment="Center"         
                       Foreground="{Binding BrushManagement.Foreground}"
                       Padding="0 10 0 0"
                       MinWidth="100"/>
        </Grid>
    </Border>

</UserControl>
