<UserControl x:Class="EEP_BudgetWatcher.Components.BudgetResultMask"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EEP_BudgetWatcher.Components"
             x:Name="BRM"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="50" SharedSizeGroup="A"/>
            <ColumnDefinition MinWidth="50" SharedSizeGroup="B"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" SharedSizeGroup="C"/>
            <RowDefinition Height="Auto" SharedSizeGroup="C"/>
            <RowDefinition Height="Auto" SharedSizeGroup="C"/>
            <RowDefinition Height="Auto" SharedSizeGroup="C"/>
            <RowDefinition Height="Auto" SharedSizeGroup="C"/>
            <RowDefinition Height="Auto" SharedSizeGroup="C"/>
            <RowDefinition Height="Auto" SharedSizeGroup="C"/>
            <RowDefinition Height="Auto" SharedSizeGroup="C"/>
            <RowDefinition Height="Auto" SharedSizeGroup="C"/>
            <RowDefinition Height="Auto" SharedSizeGroup="C"/>
        </Grid.RowDefinitions>


        <!--#region Budget start date-->
        <TextBlock Text="Begin"
                   Style="{StaticResource StringValueTextBlock}"
                   Grid.Column="0"
                   Grid.Row="0"/>

        <DatePicker SelectedDate="{Binding Path=Begin,
            UpdateSourceTrigger=PropertyChanged,
            ElementName=BRM,
            Mode=TwoWay,
            StringFormat=d}"
                    HorizontalAlignment="Right"
                 Grid.Column="1"
                 Grid.Row="0"/>
        <!--#endregion-->


        <!--#region Budget end date -->
        <TextBlock Text="End"
                   Style="{StaticResource StringValueTextBlock}"
                   Grid.Column="0"
                   Grid.Row="1"/>

        <DatePicker SelectedDate="{Binding Path=End,
            UpdateSourceTrigger=PropertyChanged,
            ElementName=BRM,
            Mode=TwoWay,
            StringFormat=d}"
                    HorizontalAlignment="Right"
                 Grid.Column="1"
                 Grid.Row="1"/>
        <!--#endregion-->


        <!--#region Budget nr of days -->
        <TextBlock Text="Number of Days"
                   Style="{StaticResource StringValueTextBlock}"
                   Grid.Column="0"
                   Grid.Row="2"/>

        <TextBox Text="{Binding Path=NumberOfDays,
            UpdateSourceTrigger=PropertyChanged,
            NotifyOnSourceUpdated=True,
            ElementName=BRM,
            Mode=OneWay}"
                 Style="{StaticResource DoubleValueTextBox}"
                    HorizontalAlignment="Right"
                 IsReadOnly="True"
                 TextAlignment="Right"
                 Grid.Column="1"
                 Grid.Row="2"/>
        <!--#endregion-->


        <!--#region Initial Budget -->
        <TextBlock Text="Initial Budget"
                   Style="{StaticResource StringValueTextBlock}"
                   Grid.Column="0"
                   Grid.Row="3"/>

        <TextBox Text="{Binding Path=InitialBudget,
            UpdateSourceTrigger=PropertyChanged,
            ElementName=BRM,
            Mode=TwoWay,
            StringFormat=C2}"
                 Style="{StaticResource DoubleValueTextBox}"
                    HorizontalAlignment="Right"
                 TextAlignment="Right"
                 Grid.Column="1"
                 Grid.Row="3"/>
        <!--#endregion-->


        <!--#region Gains -->
        <TextBlock Text="Gains"
                   Style="{StaticResource StringValueTextBlock}"
                   Grid.Column="0"
                   Grid.Row="4"/>

        <TextBox Text="{Binding Path=Gains,
            UpdateSourceTrigger=PropertyChanged,
            ElementName=BRM,
            StringFormat=C2}"
                 Style="{StaticResource DoubleValueTextBox}"
                 Foreground="{DynamicResource GainBrush}"
                 IsReadOnly="True"
                    HorizontalAlignment="Right"
                   TextAlignment="Right"
                   Grid.Column="1"
                   Grid.Row="4"/>
        <!--#endregion-->

        
        <!--#region Expenses -->
        <TextBlock Text="Expenses"
                   Style="{StaticResource StringValueTextBlock}"
                   Grid.Column="0"
                   Grid.Row="5"/>

        <TextBox Text="{Binding Path=Expenses,
            UpdateSourceTrigger=PropertyChanged,
            ElementName=BRM,
            StringFormat=C2}"
                 Style="{StaticResource DoubleValueTextBox}"
                 Foreground="{DynamicResource ExpenseBrush}"
                 IsReadOnly="True"
                    HorizontalAlignment="Right"
                   TextAlignment="Right"
                   Grid.Column="1"
                   Grid.Row="5"/>
        <!--#endregion-->

        
        <!--#region empty -->        
        <Border BorderBrush="{DynamicResource HeaderBrush}"
                BorderThickness="0 2 0 0"
                Margin="0 5"
                Grid.Column="0" Grid.ColumnSpan="2"
                Grid.Row="6"/>
        <!--#endregion-->

        
        <!--#region  -->
        <TextBlock Text="Current Balance"
                   Grid.Column="0"
                   Grid.Row="7"
                 Style="{StaticResource StringValueTextBlock}"
                 FontWeight="Bold"
                   />

        <TextBox Text="{Binding Path=CurrentBalance,
            NotifyOnSourceUpdated=True,
            ElementName=BRM,
            StringFormat=C2}"
                 Style="{StaticResource DoubleValueTextBox}"                 
                 
                 Foreground="{Binding Path=GainExpenseBrush,
            ElementName=BRM,
            Mode=OneWay,
            NotifyOnSourceUpdated=True,
            UpdateSourceTrigger=PropertyChanged}"
                 FontWeight="Bold"
                 IsReadOnly="True"
                    HorizontalAlignment="Right"
                   TextAlignment="Right"
                   Grid.Column="1"
                   Grid.Row="7"/>
        <!--#endregion-->
        
        
        <!--#region Budget nr of days -->
        <TextBlock Text="Days Left"
                   Style="{StaticResource StringValueTextBlock}"
                   Grid.Column="0"
                   Grid.Row="8"/>

        <TextBox Text="{Binding Path=DaysLeftPercentage,
            NotifyOnSourceUpdated=True,
            UpdateSourceTrigger=PropertyChanged,
            ElementName=BRM,
            StringFormat=N2,
            Mode=OneWay}"
                 Style="{StaticResource DoubleValueTextBox}"
                    HorizontalAlignment="Right"
                 IsReadOnly="True"
                 TextAlignment="Right"
                 Grid.Column="1"
                 Grid.Row="8"/>
        <!--#endregion-->

        
        <!--#region BudgetPerDay -->
        <TextBlock Text="Budget / Day"
                   Grid.Column="0"
                   Grid.Row="9"
                 Style="{StaticResource StringValueTextBlock}"
                   />

        <TextBox Text="{Binding Path=BudgetPerDay,
            NotifyOnSourceUpdated=True,
            ElementName=BRM,
            StringFormat=C2}"
                 Style="{StaticResource DoubleValueTextBox}"                 
                 
                 Foreground="{Binding Path=GainExpenseBrush,
            ElementName=BRM,
            Mode=OneWay,
            NotifyOnSourceUpdated=True,
            UpdateSourceTrigger=PropertyChanged}"
                 IsReadOnly="True"
                    HorizontalAlignment="Right"
                   TextAlignment="Right"
                   Grid.Column="1"
                   Grid.Row="9"/>
        <!--#endregion-->


    </Grid>
</UserControl>
